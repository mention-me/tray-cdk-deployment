{
  "name": "@mention-me/tray-cdk-deployment",
  "description": "A GitHub Action to deploy Tray.ai CDK connectors",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mention-me/tray-cdk-deployment.git"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.4",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "bundle": "npm run format:write && npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint:static-analysis": "npx eslint . -c eslint.config.mjs",
    "lint:types": "tsc --noEmit",
    "test": "npx jest",
    "test:coverage": "npm run test -- --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=21"
  }
}
